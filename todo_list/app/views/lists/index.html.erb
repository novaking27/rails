<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table  class="table">
  <thead>
    <tr>
      <th>Item</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>




  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.item %></td>
        <% if list.done == "1" %>
          <td>Completed</td>
        <% else %>
         <td>in Progress</td>
         <% end %>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New List', new_list_path, class: "btn btn-primary" %>
